package principal;

import java.text.DecimalFormat;
import java.util.Scanner;

public class AreaTriangulo {

    public static void main(String[] args) {
        // Inicializamos las variables
        DecimalFormat formateador = new DecimalFormat("####.##");
        Scanner lector = new Scanner(System.in);
        double lado1,lado2,lado3;   
        double area, s;  
        do{
            System.out.println("Indique el lado 1");
            lado1 = lector.nextInt();
        }while(lado1<=0);
        do{
            System.out.println("Indique el lado 2");
            lado2 = lector.nextInt();
        }while(lado2<=0);
        do{
            System.out.println("Indique el lado 3");
            lado3 = lector.nextInt();
        }while(lado3<=0); 
        s = (lado1+lado2+lado3)/2;
        area = Math.sqrt(s*(s-lado1)*(s-lado2)*(s-lado3)); 
        System.out.println("El área del triángulo es: " + formateador.format(area));        
    }

}
